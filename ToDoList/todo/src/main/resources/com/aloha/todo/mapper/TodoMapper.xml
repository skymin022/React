    <select id="select" resultType="Todos">
        SELECT * 
        FROM Todos
        WHERE no = #{no}
    </select>
    
    <select id="selectById" resultType="Todos">
        SELECT * 
        FROM Todos
        WHERE id = #{id}
    </select>

    <insert id="insert">
        INSERT INTO todos(id, name, seq)
        VALUES ( #{id}, #{name}, #{seq} )
    </insert>


    <update id="update">
        UPDATE todos
        <set>
            <if test="id != null">
                name = #{name}, 
            </if>
            <if test="status != null">
                status = #{status}, 
            </if>
            <if test="seq != null">
                seq = #{seq}, 
            </if>
                updated_at = now()
        </set>
         WHERE no = #{no}
    </update>

    <update id="updateById">
        UPDATE todos
        <set>
            <if test="id != null">
                name = #{name}, 
            </if>
            <if test="status != null">
                status = #{status}, 
            </if>
            <if test="seq != null">
                seq = #{seq}, 
            </if>
                updated_at = now()
        </set>
         WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM todos
        WHERE no = #{no}
    </delete>

    <delete id="deleteById">
        DELETE FROM todos
        WHERE id = #{id}
    </delete>

    <!-- ì „ì²´ ì™„ë£Œ -->
